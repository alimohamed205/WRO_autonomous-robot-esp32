  float distance = (voltage * 500.0) / VCC_VOLTAGE;

  Serial.print("Analog Value: ");
  Serial.print(analogValue);
  Serial.print(" | Voltage: ");
  Serial.print(voltage, 2);
  Serial.print(" V | Distance: ");
  Serial.print(distance, 1);
  Serial.println(" cm");

  delay(100);
