  float distance3 = ((analogValue3 * VCC_VOLTAGE) / 4095.0) * (500.0 / VCC_VOLTAGE);
  float distance4 = ((analogValue4 * VCC_VOLTAGE) / 4095.0) * (500.0 / VCC_VOLTAGE);

  Serial.print("Sonar 1: "); Serial.print(distance1, 1); Serial.print(" cm | ");
  Serial.print("Sonar 2: "); Serial.print(distance2, 1); Serial.print(" cm | ");
  Serial.print("Sonar 3: "); Serial.print(distance3, 1); Serial.print(" cm | ");
  Serial.print("Sonar 4: "); Serial.print(distance4, 1); Serial.println(" cm");

  delay(100);
}
ุงูุชุดุบูู:

    ุงุฑูุน ุงูููุฏ ูุดูู ุงูู Serial Monitor. ูู ูู ุญุงุฌุฉ ุตุญุ ูุชุดูู ูุฑุงุกุงุช ุงูุฃุฑุจุนุฉ ูุณุชุดุนุฑุงุช (ูุซูุงู: Sonar 1: 120.5 cm | Sonar 2: 200.0 cm | ...).
    ูู ูุณุชุดุนุฑ ูุนูู ูุด ุจูุดุชุบูุ ุชููุฏ ุชูุตููุงุชู (ุฎุงุตุฉ OUT Pin) ุฃู ุฌุฑุจ ุงุณุชุจุฏุงูู ุจูุณุชุดุนุฑ ุชุงูู.

ุฅุฐุง ููุช ุนุงูุฒ ุฏูุฌ ูุน ููููุงุช ุชุงููุฉ:

ูู ุงูู URM09 ุงุดุชุบู ูููุณุ ูููู ูุฏูุฌู ูุน ุงูู BNO055 ู BMP280 (ุงููู ุงุฎุชุจุฑุชูู ูุจู ูุฏู). ูุซุงู ุจุณูุท ูููุฏ ูุฏูุฌ:
cpp
#include <Wire.h>
#include "DFRobot_BNO055.h"
#include <Adafruit_BMP280.h>

#define ANALOG_PIN_1 34 // URM09 ูุณุชุดุนุฑ 1
#define VCC_VOLTAGE 3.3
#define I2C_SDA 21
#define I2C_SCL 22

DFRobot_BNO055_IIC bno(&Wire, 0x28);
Adafruit_BMP280 bmp;

void printLastOperateStatus(DFRobot_BNO055_IIC::eStatus_t eStatus) {
  switch (eStatus) {
    case DFRobot_BNO055_IIC::eStatusOK: Serial.println("Everything OK"); break;
    case DFRobot_BNO055_IIC::eStatusErr: Serial.println("Unknown error"); break;
    case DFRobot_BNO055_IIC::eStatusErrDeviceNotDetect: Serial.println("Device not detected"); break;
    case DFRobot_BNO055_IIC::eStatusErrDeviceReadyTimeOut: Serial.println("Device ready timeout"); break;
    case DFRobot_BNO055_IIC::eStatusErrDeviceStatus: Serial.println("Device internal status error"); break;
    default: Serial.println("Unknown status"); break;
  }
}

void setup() {
  Serial.begin(115200);
  Serial.println("Starting Sensors...");

  Wire.begin();
  bno.reset();
  delay(1000);
  while (bno.begin() != DFRobot_BNO055_IIC::eStatusOK) {
    Serial.println("BNO055 initialization failed");
    printLastOperateStatus(bno.lastOperateStatus);
    delay(2000);
  }
  Serial.println("BNO055 initialized successfully");

  if (!bmp.begin(0x76)) {
    Serial.println("BMP280 initialization failed");
    while (1) delay(2000);
  }
  Serial.println("BMP280 initialized successfully");
}

void loop() {
  // BNO055 Data
  DFRobot_BNO055_IIC::sEulAnalog_t sEul = bno.getEul();
  Serial.print("Pitch: "); Serial.print(sEul.pitch, 3);
  Serial.print(" | Roll: "); Serial.print(sEul.roll, 3);
  Serial.print(" | Yaw: "); Serial.print(sEul.head, 3);

  // BMP280 Data
  Serial.print(" | Pressure: "); Serial.print(bmp.readPressure() / 100.0F, 2);
  Serial.print(" hPa");

  // URM09 Data
  int analogValue1 = analogRead(ANALOG_PIN_1);
  float distance1 = ((analogValue1 * VCC_VOLTAGE) / 4095.0) * (500.0 / VCC_VOLTAGE);
  Serial.print(" | Sonar 1: "); Serial.print(distance1, 1); Serial.println(" cm");

  delay(100);
}
